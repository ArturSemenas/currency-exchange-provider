<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Password for all users is: password123 -->
    <!-- BCrypt hash: $2a$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewY5qdZRuTdvPpRi -->
    
    <changeSet id="5" author="system">
        <!-- Create regular user with ROLE_USER -->
        <insert tableName="users">
            <column name="username" value="user"/>
            <column name="password" value="$2a$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewY5qdZRuTdvPpRi"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>
        
        <!-- Create premium user with ROLE_PREMIUM_USER -->
        <insert tableName="users">
            <column name="username" value="premium"/>
            <column name="password" value="$2a$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewY5qdZRuTdvPpRi"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>
        
        <!-- Create admin user with ROLE_ADMIN -->
        <insert tableName="users">
            <column name="username" value="admin"/>
            <column name="password" value="$2a$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewY5qdZRuTdvPpRi"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>

        <!-- Assign ROLE_USER to user -->
        <insert tableName="user_roles">
            <column name="user_id" valueComputed="(SELECT id FROM users WHERE username='user')"/>
            <column name="role_id" valueComputed="(SELECT id FROM roles WHERE name='ROLE_USER')"/>
        </insert>

        <!-- Assign ROLE_PREMIUM_USER to premium user -->
        <insert tableName="user_roles">
            <column name="user_id" valueComputed="(SELECT id FROM users WHERE username='premium')"/>
            <column name="role_id" valueComputed="(SELECT id FROM roles WHERE name='ROLE_PREMIUM_USER')"/>
        </insert>

        <!-- Assign ROLE_ADMIN to admin user -->
        <insert tableName="user_roles">
            <column name="user_id" valueComputed="(SELECT id FROM users WHERE username='admin')"/>
            <column name="role_id" valueComputed="(SELECT id FROM roles WHERE name='ROLE_ADMIN')"/>
        </insert>
    </changeSet>

</databaseChangeLog>
